name: Simple CI Workflow

# ðŸ‘‡ When this workflow should run
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

# ðŸ‘‡ Jobs to run
jobs:
  build:
    name: Run CI
    runs-on: ubuntu-latest

    steps:
      # Step 1: Check out code
      - name: Checkout Repository
        uses: actions/checkout@v4

      # Step 2: Set up Node (example; you can change to Python/Java/etc.)
      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      # Step 3: Install dependencies
      - name: Install Dependencies
        run: npm install

      # Step 4: Run tests
      - name: Run Tests
        run: npm test

      # Step 5: Print success message
      - name: Print Message
        run: echo "CI pipeline completed successfully!"
       
                                
